{
  "name": "light-deemer",
  "version": "1.0.0",
  "description": "Chrome extension that dims harsh white/light areas on webpages to reduce eye strain",
  "scripts": {
    "build": "npm run clean && npm run build:prod",
    "build:prod": "NODE_ENV=production webpack --mode=production",
    "dev": "NODE_ENV=development webpack --mode=development --watch",
    "clean": "rm -rf dist",
    "lint": "eslint --ext .ts,.tsx src/ --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,html}\" \"tests/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css,html}\" \"tests/**/*.{ts,tsx}\"",
    "test": "jest",
    "test:e2e": "jest --config jest.e2e.config.js",
    "zip": "./scripts/package.sh",
    "type-check": "tsc --noEmit",
    "build-script": "./scripts/build.sh"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.268",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.30",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^7.1.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "html-webpack-plugin": "^5.6.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.2.5",
    "puppeteer": "^22.6.2",
    "style-loader": "^4.0.0",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.3",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "keywords": [
    "chrome-extension",
    "eye-strain",
    "dimming",
    "accessibility",
    "dark-mode"
  ],
  "author": "Light Deemer Team",
  "license": "MIT"
}
